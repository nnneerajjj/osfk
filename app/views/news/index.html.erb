<% content_for :title, I18n.t(:news) %>
<% content_for :header, I18n.t(:news) %>
<% content_for :description, I18n.t(:news_header) %>
<% content_for :breadcrumb do %>
  <%= link_to t(:news), news_index_path %>
<% end %>

<%= link_to "Skapa nyhet", new_news_path %>


<% @news.each do |news| %>

  <div class="post-excerpt clearfix">
    <div class="col-1-3 mosaic-block circle">
      <a href="<%= news_path(news) %>" class="mosaic-overlay link" title="<%= news.subject %>" style="display: inline; opacity: 0;"></a>
      <div class="mosaic-backdrop" style="display: block;">
      <% if news.image_uploads.any? %>
        <img src="<%= news.image_uploads.first.file.url(:thumb) %>" alt="<%= news.subject %>">
        <% end %>
      </div>
    </div>

    <div class="col-2-3 last">
      <h3><%= link_to news.subject, news %></h3>
      <p><%= auto_link(simple_format(truncate(news.text, length: 250, escape: false)), html: { target: '_blank' }) { |text| text } %></p>
        <%= link_to I18n.t(:read_more), news %>
    </div>
  </div>
<% end %>

<%= paginate @news %>
