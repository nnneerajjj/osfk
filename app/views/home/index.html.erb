<% content_for :banner do %>
  <div class="tp-banner-container">
    <div class="tp-banner" >
      <ul>
        <%= render partial: 'slide', collection: ['sportfiske1.jpg', 'sportfiske2.jpg'] %>
      </ul>
    </div>
  </div>

<% end %>

<div class="col-1-2">
  <h3><%= t(:news) %></h3>
  <ul class="widget-event-list">
    <% most_recent_news.each do |news| %>
      <li>
        <div class="date"><%= l news.created_at, format: :long %></div>
        <h6 class="title"><%= link_to news.subject, news %></h6>
        <p><%= auto_link(simple_format(truncate(news.text, length: 100, escape: false)), html: { target: '_blank' }) { |text| text } %>
          <% if can? :comment, news %>
            <%= link_to t(:read_more_comment), news %>
          <% else %>
            <%= link_to t(:read_more), news %>
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>
</div>

<div class="col-2-5">
  <!-- Start Widget -->
    <div class="widget">
      <h3 class="widget-title"><%= t :latest %></h3>
      <div class="tab-container" id="tab-container2">
        <ul class="tab-nav">
          <li data-tab="tab3" class="active"><%= t :forum %></li>
          <li data-tab="tab4" class=""><%= t :comments %></li>
        </ul>

        <div class="tab-contents">
          <h3 class="v_nav v_active" data-tab="tab3"><%= t :forum %></h3>
          <div id="tab3" class="tab_content" style="display: block;">
            <ul class="thumb-list">
              <% Topic.most_recent.each do |topic| %>
                <li>
                  <div class="date"><%= l topic.created_at, format: :long %></div>
                  <h6 class="title"><%= link_to topic.subject, topic %></h6>
                    <p><%= auto_link(truncate(topic.content, length: 100), html: { target: '_blank' }) { |text| text } %></p>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>

          <h3 class="v_nav" data-tab="tab4"><%= t :comments %></h3>
          <div id="tab4" class="tab_content" style="display: none;">
            <ul class="thumb-list">
            <% Comment.most_recent.each do |comment| %>
              <li>
                <blockquote>"<%= comment.body %> "<cite>- <%= comment.user.fullname %></cite></blockquote>
                <p syle="margin-left: 20px;"><%= in_commentable(comment.commentable) %> <%= link_to comment.commentable.subject, comment.commentable %></p>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
</div>
