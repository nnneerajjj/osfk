<% content_for :title, I18n.t(:forgot_password) %>

<div class="head-title">
  <h1><%= I18n.t(:sign_in) %></h1>
  <div class="head-description">
    <p><%= I18n.t(:forgot_password) %></p>
  </div>
</div>

<div class="page">
  <h1><%= I18n.t(:forgot_password) %></h1>

    <div class="eight column">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        <%= devise_error_messages! %>

        <%= f.email_field :email, autofocus: true, placeholder: I18n.t(:email) %>

        <%= f.submit I18n.t(:send_me_reset_password), class: 'submit-button' %>
      <% end %>
  </div>

</div>