<% content_for :title, I18n.t(:change_my_password) %>
<% content_for :header, I18n.t(:sign_in) %>
<% content_for :description, I18n.t(:change_my_password) %>

<div class="inner-content page">

  <h1><%= I18n.t(:change_my_password) %></h1>

  <div>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <%= f.label :password, I18n.t(:password) %>
      <%= f.password_field :password, autofocus: true, placeholder: I18n.t(:password) %>

      <%= f.label :password_confirmation, I18n.t(:password_confirmation) %>
      <%= f.password_field :password_confirmation, placeholder: I18n.t(:password_confirmation) %>

      <%= f.submit I18n.t(:change_my_password) %>
    <% end %>
  </div>

</div>
