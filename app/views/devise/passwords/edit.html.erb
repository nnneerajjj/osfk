<% content_for :title, I18n.t(:change_my_password) %>

<div class="head-title">
  <h1><%= I18n.t(:sign_in) %></h1>
  <div class="head-description">
    <p><%= I18n.t(:change_my_password) %> </p>
  </div>
</div>


<div class="page">

<h1><%= I18n.t(:change_my_password) %></h1>

<div class="eight column">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, placeholder: I18n.t(:password) %>

    <%= f.password_field :password_confirmation, placeholder: I18n.t(:password_confirmation) %>

    <%= f.submit I18n.t(:change_my_password), class: 'submit-button' %>
  <% end %>
</div>

</div>