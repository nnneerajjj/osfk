<% content_for :title, I18n.t(:sign_up) %>
<% content_for :header, I18n.t(:sign_up) %>
<% content_for :description, I18n.t(:sign_up) %>

<div class="page">
  <%= request.path %>
  <h1><%= I18n.t(:sign_up) %></h1>

  <%= render 'layouts/flashmessage', alert: resource.errors.full_messages.to_sentence %>

  <div class="eight column">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= f.email_field :email, autofocus: true, placeholder: I18n.t(:email) %>

      <%= f.password_field :password, placeholder: I18n.t(:password) %>

      <%= f.password_field :password_confirmation, placeholder: I18n.t(:password_confirmation) %>

      <%= f.text_field :firstname, placeholder: I18n.t(:firstname) %>

      <%= f.text_field :lastname, placeholder: I18n.t(:lastname) %>

      <%= f.number_field :number, in: 1...30, placeholder: I18n.t(:number) %>

      <%= f.submit I18n.t(:sign_up), class: 'submit-button' %>
  <% end %>

  </div>

</div>
