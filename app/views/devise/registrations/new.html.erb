<% content_for :title, I18n.t(:sign_up) %>
<% content_for :header, I18n.t(:sign_up) %>
<% content_for :description, I18n.t(:sign_up) %>
<% content_for :meta do %>
<% end %>

<div class="inner-content page">
  <h1><%= I18n.t(:sign_up) %></h1>

  <p><%= I18n.t(:sign_up_text) %></p>

  <%#= render 'layouts/flashmessage', alert: resource.errors.full_messages.to_sentence %>

  <div class="eight column">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.label :firstname %>
      <%= f.text_field :firstname, autofocus: true %>

      <%= f.label :lastname %>
      <%= f.text_field :lastname %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>


      <%= f.submit I18n.t(:sign_up) %>
  <% end %>

  </div>

</div>
