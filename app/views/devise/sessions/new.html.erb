<% content_for :title, I18n.t(:sign_in) %>
<% content_for :header, I18n.t(:sign_in) %>
<% content_for :description, I18n.t(:sign_in) %>


<h1 class="text-center"><%= t :sign_in %></h1>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'clearfix form-style-2') do |f| %>
  <div>
    <%= f.email_field :email, :autofocus => true, class: 'input--full', placeholder: 'E-postadress' %>
  </div>

  <div>
    <%= f.password_field :password, class: 'input--full', placeholder: 'LÃ¶senord' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="is-hidden">
      <%= f.check_box :remember_me, checked: true %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <%= link_to I18n.t(:forgot_password), new_password_path(resource_name), class: 'right' %>

  <div class="field actions">
    <%= f.submit I18n.t(:'sign_in'), class: 'button button--full' %>

  </div>
<% end %>

