<% content_for :title, t(:create_event) %>
<% content_for :header, t(:calendar) %>
<% content_for :description, t(:create_event) %>
<% content_for :breadcrumb do %>
  <%= link_to t(:calendar), events_path %>
  <%= link_to t(:create_event), new_event_path %>
<% end %>

<div class="clearfix post">
<%= form_for @event do |f| %>

  <input type="text" data-form="subject" placeholder="<%= t :subject %>" value="<%= @event.subject %>">

  <div class="boxy boxy-pad col-1-3">
    <h5><%= t :details %></h5>
    <ul class="widget-list list-2">
      <li><strong><%= t :date_details %>: </strong>
          <%= f.date_field :start_date_date, class: 'datepicker', value: @event.start_date && l(@event.start_date.to_date), data: { form: 'start_date_date' } %>
          <%= f.time_field :start_date_time, value: @event.start_date && l(@event.start_date, format: :short), data: { form: 'start_date_time' } %><% end %>
      </li>
      <li><strong>Plats: </strong><input type="text" placeholder="Plats" data-form="location" style="background-color: white;"></li>
      <li><strong>Adress: </strong><input type="text" placeholder="Adress" data-form="address" style="background-color: white;"></li>
      <li><strong>Deltagande?: </strong><input type="checkbox" data-form="can_participate"></li>
    </ul>
  </div>

  <div data-form="content" <%= edit_text_tags(@event, :content) %>>Skriv en beskrivning h√§r</div>
</div>

<%= button_tag t(:save_event), class: 'form-post', data: { url: event_path(@event), name: 'event'  } %>
