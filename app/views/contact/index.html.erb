<% content_for :title, @page.header %>

<% content_for :javascript do %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <%= javascript_include_tag "gmap3.min" %>
<% end %>

<div class="head-title">
  <h1><%= @page.title %></h1>
  <div class="head-description">
    <p><%= @page.description %></p>
  </div>
</div>

<div class="inner-content">

  <div id="outer-map">
    <div id="map"></div>
  </div>

  <div id="contact" class="row">
    <div class="six column">
      <h1><%= I18n.t(:send_us_a_message) %></h1>
      <form id="contact-form">
        <label id="label" for="name"></label><input name="name" id="name" type="text" placeholder="<%= I18n.t(:name) %>" value="" required>
        <label id="label1" for="email"></label><input name="email" id="mail" type="text" placeholder="<%= I18n.t(:email) %>" value="" required>
        <label id="label2" for="website"></label><input name="website" id="website" type="text" placeholder="<%= I18n.t(:website) %>" value="">
        <textarea name="comment" id="comment" placeholder="<%= I18n.t(:message) %>" required></textarea>
        <div id="msg" class="message"></div>
        <input type="submit" id="submit_contact" value="<%= I18n.t(:send) %>">
      </form>
    </div>

    <div class="six column">
      <%= raw @page.content.html_safe %>
    </div>
  </div>
</div>
