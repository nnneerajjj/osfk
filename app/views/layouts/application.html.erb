<!doctype html>
<html lang="sv">
<head>
  <title><%= I18n.t(:title) %> <%= yield :title %></title>

  <meta charset="utf-8">

  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <%= stylesheet_link_tag "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <%= javascript_include_tag "application" %>
  <%= yield :javascript %>
  <%= csrf_meta_tags %>

<script type="text/javascript">
$(document).ready(function(){

  $('.flexslider').flexslider({
    animation: "fade",
    start: function(slider){
      $('body').removeClass('loading');
    }
  });
})
</script>

</head>
<body>

  <div class="static-background">
    <img alt="" src="/assets/back.jpg">
  </div>

  <div class="container">
    <div class="row">

      <nav class="top-bar inner-header hide">
        <ul>
          <li class="name"><a href="<%= root_path %>"><img alt="" src="/assets/logo.png"></a></li>
          <li class="toggle-topbar"><a href="#"></a></li>
        </ul>
      </nav>

      <header class="three column">
        <div class="inner-header">
          <div id="logo">
            <div>
              <a href="<%= root_path %>"><img alt="" src="/assets/logo.png"></a>
            </div>
          </div>

          <section class="menu">
            <%= render "layouts/menu" %>
          </section>
            <section class="header-end">
              <%= render "layouts/sign_on" %>
            </section>
      </div>
    </header>


    <div id="content" class="nine column">
      <%
        header = yield :header
        description = yield :description
        if header.present? && description.present?
      %>
        <div class="head-title">
          <h1><%= header %></h1>
          <div class="head-description">
            <p><%= description %></p>
          </div>
        </div>
      <% end %>

      <%= yield %>

      <%= render "layouts/bottom" %>

      <article class="end-footer twelve column">
        <p><%= I18n.t(:copyright) %></p>
      </article>

    </div>

  </div>
</div>

</body>
</html>
